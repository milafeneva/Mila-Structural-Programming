Да се напише програма која за квадратна матрица внесена од тастатура ќе испечати на екран дали таа е симетрична во однос на главната дијагонала.

#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n; 
    int array[n][n];
    bool symmetrical = true;

    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> array[i][j];
        }
    }
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (array[i][j] != array[j][i]) {
                symmetrical = false;
                break;
            }
        }
        if (!symmetrical) break;
    }
    if (symmetrical) {
        cout << "YES" << endl;
    } else {
        cout << "NO" << endl;
    }
    return 0;
}
