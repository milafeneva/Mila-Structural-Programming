Да се напише програма за пресметување на y = x^n за даден природен број n, n >= 1 и реален број x.

#include <iostream>
using namespace std;

int main() {
    int n;
    float x, y = 1;
    cin >> x;
    cin >> n;
    int counter = 0;
    while (counter < n) {
        y *= x;
        counter++;
    }
    cout << x << "^" << n << " = " << y << endl;
    return 0;


}

