Да се напише програма што ќе ги испечати сите броеви од зададен опсег кои се читаат исто и одлево надесно и оддесно налево.

пример броеви

12321 5061605

 #include <iostream>
using namespace std;

int main() {
    int i, from, to, temp, op, digit;
    cin >> from >> to;
    for (i = from; i <= to; i++) {
        temp = i;
        op = 0;
        while (temp > 0) {
            digit = temp % 10;
            op = op * 10 + digit;
            temp /= 10;
        }
        if (op == i) cout << i << "\t";
    }
    return 0;
}

 2 nacin: 
 
 #include <iostream>
using namespace std;

int main() {
    int a, b;
    cin >> a >> b;
    for (int i = a; i <= b; i++) {
        int temp = i;
        int reversed = 0;
        while (temp!=0) {
            int curr = temp%10;
            reversed = reversed*10+curr;
            temp = temp/10;
        }
        if (reversed == i) {
            cout << i << endl;
        }
    }
    return 0;
}
